#!/bin/bash

rm -f /home/analytics/bak/statsdb_rails.*.csv

echo "Exporting statsdb_rails.queries..."
/usr/wikia/backend/bin/dw/query2csv --query "select * from statsdb_rails.queries" > ~/bak/statsdb_rails.queries.$(date +%Y%m%d).csv

echo "Exporting statsdb_rails.query_executions..."
/usr/wikia/backend/bin/dw/query2csv --query "select * from statsdb_rails.query_executions" > ~/bak/statsdb_rails.query_executions.$(date +%Y%m%d).csv

echo "Exporting statsdb_rails.schema_migrations..."
/usr/wikia/backend/bin/dw/query2csv --query "select * from statsdb_rails.schema_migrations" > ~/bak/statsdb_rails.schema_migrations.$(date +%Y%m%d).csv

s3cmd put ~/bak/statsdb_rails.*.csv s3://raw-track-data/statsdb.bak/

