#!/usr/bin/perl -w

use strict;

use FindBin qw/$Bin/;
use lib "$Bin/../../lib";

use TheSchwartz;
use Wikia::DW::ETL::Job::Worker;

my $client = TheSchwartz->new( databases => [ 
                                              { dsn  => 'DBI:mysql:database=statsdb_etl;host=dw-s1',
                                                user => 'statsdb',
                                                pass => '' }
                                            ] );

$client->can_do('Wikia::DW::ETL::Job::Worker');
$client->work();

